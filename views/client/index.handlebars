                    <span class="value">
                         {{user.tikets}}
                    </span>
                    <p class="desc">
                        Le nombre de vos demandes ouvertes
                    </p>
                </div>
            </a>
        </div>
        <div class="services">
            <span class="title">Vos services</span>
            <div class="tables">
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom du produit</th>
                            <th>Temps restant</th>
                            <th>État</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each services}}
                        <tr>
                            <td>1</td>
                            <td>TX-2 Game</td>
                            <td>22 Jours</td>
                            <td class="state actif"> <label for="">Actif</label></td>
                            <td><button onclick="location.href='/manager/pterodactyl.html'">Gérer</button></td>
                        </tr>
                        {{else}}

                        <tr>
                            <td colspan="5">Vous avez aucuns service relier a ce compte.</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <footer>
            <span>Copyright © {{app.config.company.name}}</span>
            <span>TxCMS - {{system.version}}</span>
        </footer>
    </section>

    <section class="profile">

        <div class="user">
            <a class="logo" href="/client/profile">
                <img id="userlogo" src="" alt="">
                <script>
                    if("{{user.logo}}" == ""){
                        
                        if("{{user.sexe}}" == "male"){
                            document.getElementById('userlogo').src = "/images/male-logo.png"
                        } 

                        if("{{user.sexe}}" == "female"){
                            document.getElementById('userlogo').src = "/images/female-logo.png"
                        }

                    }else{
                        document.getElementById('userlogo').src = "{{user.logo}}"
                    }
                </script>
                <span class="username">{{user.lastname}} {{user.name}}</span>
            </a>
            <div>
                <span class="email">{{user.email}}</span>
                <br>
                <span class="id">tx-{{user.id}}</span>
            </div>

            <form action="/client/logout" method="post">
                <button type="submit">Me déconnecter</button>
            </form>
            
        </div>
