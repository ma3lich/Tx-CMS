
    <nav class="">
        <div class="logo">
            <img src="/images/logo.png" alt="">
        </div>
        <ul class="menu">
            <li class="active"><a href="/client"><ion-icon name="home-outline"></ion-icon></a></li>
            <li><a href="/client/shop"><ion-icon name="cart-outline"></ion-icon></a></li>
        </ul>

        <ul class="menu hide" id="adminmenu">
            <li style="visibility:hidden;"><a href="/admin"><ion-icon name="settings-outline"></ion-icon></a></li>
        </ul>

        <style>
            .hide{
                display:  !important;
                cursor: not-allowed;
            }

            .show{
                display: block !important;
            }
        </style>

        <script>
            if("{{user.role}}" == "null"){
                    document.getElementById("adminmenu").classList.add("hide")
            }else{
                if("{{user.role}}" == "admin"){
                    document.getElementById("adminmenu").classList.add("show")
                    document.getElementById("adminmenu").classList.remove("hide")
                }else{
                    document.getElementById("adminmenu").classList.add("hide")
                }
            }
        </script>
    </nav>


    
    <section class="container">
        <div class="info">
            <a href="" class="card">
                <div class="icon">
                    <ion-icon name="wallet-outline"></ion-icon>                
                </div>
                <div class="text">
                    <span class="value">
                        {{user.wallet}}€
                    </span>
                    <p class="desc">
                        Le montant de votre porte feuille 
                    </p>
                </div>
            </a>
            <a href=""  class="card">
                <div class="icon">
                    <ion-icon name="albums-outline"></ion-icon>                
                </div>
                <div class="text">
                    <span class="value">
                        {{user.services}}
                    </span>
                    <p class="desc">
                        Le nombre des services actifs
                    </p>
                </div>
            </a>
            <a href="" class="card">
                <div class="icon">
                    <ion-icon name="receipt-outline"></ion-icon>
                </div>
                <div class="text">
                    <span class="value">
                        {{user.transactions}}
                    </span>
                    <p class="desc">
                        Le nombre de toutes vos transactions
                    </p>
