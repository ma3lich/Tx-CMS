
    <nav class="">
        <div class="logo">
            <img src="/images/logo.png" alt="">
        </div>
        <ul class="menu">
            <li><a href="/client"><ion-icon name="home-outline"></ion-icon></a></li>
            <li><a href="/shop"><ion-icon name="cart-outline"></ion-icon></a></li>
            <li class="active"><a href="/client/profile"><ion-icon name="person-outline"></ion-icon></a></li>

        </ul>

        <ul class="menu hide" id="adminmenu">
            <li><a href="/admin"><ion-icon name="settings-outline"></ion-icon></a></li>
        </ul>

        <style>
            .hide{
                display:  !important;
                cursor: not-allowed;
            }

            .show{
                display: block !important;
            }
        </style>

        <script>
            if("{{user.role}}" == "null"){
                    document.getElementById("adminmenu").classList.add("hide")
            }else{
                if("{{user.role}}" == "admin"){
                    document.getElementById("adminmenu").classList.add("show")
                    document.getElementById("adminmenu").classList.remove("hide")
                }else{
                    document.getElementById("adminmenu").classList.add("hide")
                }
            }
        </script>
