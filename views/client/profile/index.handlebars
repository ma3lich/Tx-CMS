    <section class="container">

        <form class="profile"  action="/client/profile" method="post">           
            <div class="userLogo">
                <img id="pp" src="" alt="">
                <script>
                    if("{{user.logo}}" == ""){
                        
                        if("{{user.sexe}}" == "male"){
                            document.getElementById('pp').src = "/images/male-logo.png"
                        } 

                        if("{{user.sexe}}" == "female"){
                            document.getElementById('pp').src = "/images/female-logo.png"
                        }

                    }else{
                        document.getElementById('pp').src = "{{user.logo}}"
                    }
                </script>

                <section class="formInput">
                    <div>
                        <label style="padding: 0 5px;" for="id">Client ID</label>
                        <br>
                        <input disabled type="text" name="id" id="id" maxlength="25">
                        <script>
                            document.getElementById('id').value = "tx-"+`{{user.id}}` 
                        </script>
                    </div>
                </section>

                <section style="margin-top: 20px;"  class="formInput">
                    <div>
                        <label for="id">Bloc-notes</label>
                        <br>
                        <textarea placeholder="Vous voullez notez un truc ? (par example le mot de passe et l'ip de votre vps chez txhost ?)" name="userNote" id="userNote" cols="50" rows="5"></textarea>
                        <script>
                            document.getElementById('userNote').value = `{{user.usernote}}` 
                        </script>
                    </div>
                </section>

                <button type="submit">Sauvegarder</button>
            </div>

            <div class="userInfo">
                <section class="formInput">
                    <div>
                        <label for="lastname">Nom</label>
                        <br>
                        <input required type="text" name="lastname" id="lastname" maxlength="25">
                        <script>
                            document.getElementById('lastname').value = `{{user.lastname}}` 
                        </script>
                    </div>
                    <div>
                        <label for="name">Prénom</label>
                        <br>
                        <input required type="text" name="name" id="name" maxlength="25">
                        <script>
                            document.getElementById('name').value = `{{user.name}}` 
                        </script>
                    </div>
                </section>

                <section class="formInput">
                    <div>
                        <label for="name">Email</label>
                        <br>
                        <input required type="email" name="email" id="email" maxlength="25"  disabled>
                        <script>
                            document.getElementById('email').value = `{{user.email}}` 
                        </script>
                    </div>
                    <div>
                        <label for="lastname">Nouveau Mot De Passe</label>
                        <br>
                        <input required type="password" name="password" id="password" maxlength="25">
                    </div>
                </section>
                <section class="formInput">
                    <div>
                        <label for="sexe">Sexe</label>
                        <br>
                        <select name="sexe" id="sexe" required>
                            <option value="male">Homme</option>
                            <option value="female">Femme</option>
                        </select>
                        <script>
                            document.getElementById('sexe').value = `{{user.sexe}}` 
                        </script>
                    </div>
                    <div>
                        <label for="birthday">Date de naissance</label>
                        <br>
                        <input type="date" name="birthday" id="birthday" max="2012-12-31" disabled>
                        <script>
                            document.getElementById('birthday').value = `{{user.birthday}}` 
                        </script>
                    </div>
                </section>

                <section class="formInput">
                    <div>
                        <label for="logo">Photo de profile (URL)</label>
                        <br>
                        <input type="logo" name="logo" id="logo" maxlength="1000" value={{user.logo}}>
                    </div>
                </section>

                <section class="formInput">
                    <div>
                        <label for="role">Role</label>
                        <br>
                        <select name="role" id="role" disabled>
                            <option value="user">Utilisateur</option>
                            <option value="admin">Administrateur</option>
                        </select>
                        <script>
                            document.getElementById('role').value = `{{user.role}}` 
                        </script>
                    </div>
                    <div>
                        <label for="wallet">Crédits</label>
                        <br>
                        <input type="number" name="wallet" id="wallet" max="999" min="0" step="0.01" pattern="^\d+(?:\.\d{1,2})?$" disabled>
                        <script>
                            document.getElementById('wallet').value = `{{user.wallet}}` 
                        </script>
                    </div>
                </section>
            </div>
        </form>
        
    </section>

