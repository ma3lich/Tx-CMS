    <section class="profile register">
        <div class="logoText">
            <img src="/images/logo-text.png" classe=""alt="">
            <h2>Gérer une offre Proxmox/Pterodactyl</h2>
        </div>
        <form enctype="multipart/form-data"  action="/admin/plans/edit/:id" method="post">
                <input style="display:none" type="text" name="id" id="id" value={{plan.id}}>
                <section class="formInput">
                    <div>
                        <label for="name">Nom de l'offre</label>
                        <br>
                        <input required type="text" name="name" id="name" maxlength="25">
                        <script>
                            document.getElementById('name').value = `{{plan.name}}` 
                        </script>
                    </div>
                    <div>
                        <label for="categorie">Catégorie</label>
                        <br>
                        <select style="text-transform:capitalize;" name="categorie" id="categorie" disabled>
                        {{#each categorie}}
                                <option  value={{name}}>{{name}}</option>
                        {{/each}}
                        </select>

                        <script>
                            document.getElementById('categorie').value = `{{plan.categorie}}`
                        </script>
                    </div>
                </section>

                <section class="formInput">
                    <div>
                        <label for="price">Prix de l'offre (€)</label>
                        <br>
                        <input type="number" name="price" id="price" max="999" min="0" step="0.01" pattern="^\d+(?:\.\d{1,2})?$" required value={{plan.price}}>
                    </div>
                    <div>
                        <label for="stock">État du stock</label>
                        <br>
                        <select name="stock" id="stock">
                            <option value="1">En stock</option>
                            <option value="0">Repture de stock</option>
                        </select>

                        <script>
                            document.getElementById('stock').value = `{{plan.stock}}`
                        </script>
                    </div>
                </section>

                <section class="mail">
                    <div>
                        <label for="state">Statut</label>
                        <br>
                        <select name="state" id="state">
                            <option value="public">Public</option>
                            <option value="private">Privé</option>
                        </select>

                        <script>
                            document.getElementById('state').value = `{{plan.state}}`
                        </script>
                    </div>
                </section>
                    <button type="submit">Sauvegarder</button>
        </form>
    </section>


    <style>
        .hide{
