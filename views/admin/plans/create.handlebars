    <section class="profile register">
        <div class="logoText">
            <img src="/images/logo-text.png" classe=""alt="">
            <h2>Crée une offre</h2>
        </div>
        <form enctype="multipart/form-data"  action="/admin/plans/create" method="post">
                <section class="formInput">
                    <div>
                        <label for="name">Nom de l'offre</label>
                        <br>
                        <input type="text" name="name" id="name" required>
                    </div>
                    <div>
                        <label for="categorie">Catégorie</label>
                        <br>
                        <select style="text-transform:capitalize;" name="categorie" id="categorie">
                        {{#each categorie}}
                                <option value={{name}}>{{name}}</option>
                        {{/each}}
                        </select>
                        <script>
                            console.log(document.getElementById('categorie').value)
                        </script>
                    </div>
                </section>

                <section class="formInput">
                    <div>
                        <label for="price">Prix de l'offre (€)</label>
                        <br>
                        <input type="number" name="price" id="price" max="999" min="0" step="0.01" pattern="^\d+(?:\.\d{1,2})?$" required>
                    </div>
                    <div>
                        <label for="stock">État du stock</label>
                        <br>
                        <select name="stock" id="stock">
                            <option value="1">En stock</option>
                            <option value="0">Repture de stock</option>
                        </select>
                    </div>
                </section>

                <section class="formInput">
                    <div>
                        <label for="state">Statut</label>
                        <br>
                        <select name="state" id="state">
                            <option value="public">Public</option>
                            <option value="private">Privé</option>
                        </select>
                    </div>
                </section>

                <button type="submit">Creé</button>
        </form>
    </section>
