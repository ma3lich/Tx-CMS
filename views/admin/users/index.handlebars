<section class="container">

    {{#if success_messages}}
    <div class="notif success">
        <span class="title">Bravo ! </span>
        <span class="message">{{success_messages}}</span>
        <span class="close" id="close">
            <ion-icon name="close-outline"></ion-icon>
        </span>
    </div>

    <script>
        $('#close').click(() => {
            $('.notif').fadeTo(300, 0.01, function () {
                $(this).slideUp(300, function () {
                    $(this).remove();
                });
            });
        })
    </script>
    {{/if}}

    {{#if error_messages}}
    <div class="notif error">
        <span class="title">Messages d'erreur ! </span>
        <span class="message">{{error_messages}}</span>
        <span class="close" id="close">
            <ion-icon name="close-outline"></ion-icon>
        </span>
    </div>

    <script>
        $('#close').click(() => {
            $('.notif').fadeTo(300, 0.01, function () {
                $(this).slideUp(300, function () {
                    $(this).remove();
                });
            });
        })
    </script>
    {{/if}}

    <div class="tables">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>sex</th>
                    <th>Date de naissance</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <style>
                    table {
                        page-break-before: always;
                        align-content: center;
                    }

                    td {
                        text-transform: capitalize;
                        width: auto;
                    }

                    td.logo {
                        width: 10%;
                        margin: auto;
                    }

                    td.logo img {
                        width: 40%;
                        border-radius: 100%;
                    }
                </style>
                {{#each users}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}} {{lastname}}</td>
                    <td style="text-transform:inherit;">{{email}}</td>
                    <td>{{sex}}</td>
                    <td>{{birthday}}</td>
                    <td>{{role}}</td>
                    <td>
                        <a href="/admin/users/edit/{{id}}">Gérer</a>
                        <a class="normal" href="/admin/users/mail/{{id}}">Mail</a>
                        <form action="/admin/users/delete/{{id}}" method="post">
                            <button class="danger" type="submit">Suprimé</button>
                        </form>
                    </td>
                </tr>
                {{else}}

                <tr>
                    <td colspan="7">Aucun utilisateurs n'est inscrit sur votre TxCMS</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    </div>

    <div class="createButtons">
        <a href="/admin/users/create">Crée un utilisateur</a>
    </div>

    <footer>
        <span>Copyright © {{app.config.company.name}}</span>
        <span>TxCMS - {{system.version}}</span>
    </footer>

</section>

<section class="profile_bar">
    <div class="user">
        <a class="logo" href="/client/profile">
            <img id="userlogo" src="" alt="">
            <script>
                if ("{{user.logo}}" == "") {
                    switch ("{{user.sex}}") {
                        case "male":
                            $('#userlogo').attr('src', "/images/male-logo.png");
                            break;
                        case "female":
                            $('#userlogo').attr('src', "/images/female-logo.png");
                            break;
                    }
                } else {
                    $('#userlogo').attr('src', "{{user.logo}}")
                }
            </script>
            <span class="username">{{user.lastname}} {{user.name}}</span>
        </a>
        <div>
            <span class="email">{{user.email}}</span>
            <br>
            <span class="id">tx-{{user.id}}</span>
        </div>

