<section class="container">

    

    <span class="title">Liste des utilisateurs : </span>

    <div class="tables">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Sexe</th>
                    <th>Date de naissance</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <style>
                    table {
                        page-break-before: always;
                        align-content: center;
                    }

                    td {
                        text-transform: capitalize;
                        width: auto;
                    }

                    td.logo {
                        width: 10%;
                        margin: auto;
                    }

                    td.logo img {
                        width: 40%;
                        border-radius: 100%;
                    }
                </style>
                {{#each users}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}} {{lastname}}</td>
                    <td>{{email}}</td>
                    <td id="sex">{{sex}}</tdi>
                    <td>{{birthday}}</td>
                    <td>{{role}}</td>
                    <td>
                        <button onclick="location.href='/admin/users/edit/{{id}}';">
                            <ion-icon name="brush-outline"></ion-icon>
                        </a>
                        <button class="normal" onclick="location.href='/admin/users/mail/{{id}}';">
                            <ion-icon name="send-outline"></ion-icon>
                        </button>
                        <form action="/admin/users/delete/{{id}}" method="post">
                            <button class="danger" type="submit">
                                <ion-icon name="trash-outline"></ion-icon>
                            </button>
                        </form>
                    </td>
                </tr>
                {{else}}

                <tr>
                    <td colspan="7">Aucun utilisateurs n'est inscrit sur votre TxCMS</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    </div>

    <div class="createButtons">
        <a href="/admin/users/create">Crée un utilisateur</a>
    </div>

    <footer>
        <span>Copyright © {{config.host.name}}</span>
        <span>TxCMS - {{system.version}}</span>
    </footer>

</section>

<section class="profile_bar">
    <div class="user">
        <a class="logo" href="/client/profile">
            <img id="userlogo" src="" alt="">
            <script>
                if ("{{user.logo}}" == "") {
                    switch ("{{user.sex}}") {
                        case "male":
                            $('#userlogo').attr('src', "/images/male-logo.png");
                            break;
                        case "female":
                            $('#userlogo').attr('src', "/images/female-logo.png");
                            break;
                    }
                } else {
                    $('#userlogo').attr('src', "{{user.logo}}")
                }
            </script>
            <span class="username">{{user.lastname}} {{user.name}}</span>
        </a>
        <div>
            <span class="email">{{user.email}}</span>
            <br>
            <span class="id">tx-{{user.id}}</span>
        </div>

        <form action="/client/logout" method="post">
            <button type="submit">Me déconnecter</button>
        </form>

    </div>
