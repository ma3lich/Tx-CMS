<section class="profile_bar register">
    <div class="logoText">
        <img src="/images/logo-text.png" alt="TxCMS LOGO">
        <h2>Gestion de l'utilisateur : {{user.name}} {{user.lastname}}</h2>
    </div>
    <form action="/admin/users/edit/:id" method="post">
        <input style="display:none" type="text" name="id" id="id">
        <section class="formInput">
            <div>
                <label for="lastname">Nom</label>
                <br>
                <input required type="text" name="lastname" id="lastname" maxlength="25">
            </div>
            <div>
                <label for="name">Prénom</label>
                <br>
                <input required type="text" name="name" id="name" maxlength="25">
            </div>
        </section>

        <section class="formInput">
            <div>
                <label for="name">Email</label>
                <br>
                <input required type="email" name="email" id="email" maxlength="25" disabled>
            </div>
            <div>
                <label for="lastname">Nouveau Mot De Passe</label>
                <br>
                <input type="password" name="password" id="password" maxlength="25">
            </div>
        </section>
        <section class="formInput">
            <div>
                <label for="sex">sex</label>
                <br>
                <select name="sex" id="sex" required>
                    <option value="male">Homme</option>
                    <option value="female">Femme</option>
                </select>
            </div>
            <div>
                <label for="birthday">Date de naissance</label>
                <br>
                <input type="date" name="birthday" id="birthday" max="2012-12-31" required>
            </div>
        </section>

        <section class="formInput">
            <div>
                <label for="logo">Photo De Profile</label>
                <br>
                <input type="logo" name="logo" id="logo" maxlength="25" value="null">
            </div>
        </section>

        <section class="formInput">
            <div>
                <label for="role">Role</label>
                <br>
                <select name="role" id="role" required>
                    <option value="user">Utilisateur</option>
                    <option value="admin">Administrateur</option>
                </select>
            </div>
            <div>
                <label for="wallet">Crédits</label>
                <br>
                <input type="number" name="wallet" id="wallet" max="999" min="0" step="0.01"
                    pattern="^\d+(?:\.\d{1,2})?$" required>
            </div>
        </section>
        <button type="submit">Sauvegarder</button>
        <script>
            $('#id').val('{{user.id}}');
            $('#name').val('{{user.name}}');
            $('#lastname').val('{{user.lastname}}');
            $('#email').val('{{user.email}}');
            $('#sex').val('{{user.sex}}');
            $('#birthday').val('{{user.birthday}}');
            $('#logo').val('{{user.logo}}');
            $('#role').val('{{user.role}}');
            $('#wallet').val('{{user.wallet}}');
        </script>
    </form>
</section>