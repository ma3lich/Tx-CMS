<section class="profile register">
    <div class="logoText">
        <img src="/images/logo-text.png" classe="" alt="">
        <h2>GÃ©rer une offre Proxmox/Pterodactyl</h2>
    </div>
    <form action="/admin/settings/e-mail" method="post">
        <section class="formInput">
            <div>
                <label for="hostname">Nom de l'hote</label>
                <br>
                <input placeholder="smtp.txcms.fr" type="text" name="hostname"
                    id="hostname" required value={{smtp.config.host}}>
            </div>
            <div>
                <label for="port">Port</label>
                <br>
                <input placeholder="587" type="number" name="port" id="port"
                    required value={{smtp.config.port}}>
            </div>
        </section>

        <section class="formInput">
            <div>
                <label for="username">Nom de l'utilisateur</label>
                <br>
                <input placeholder="support@txcms.fr" type="text"
                    name="username" id="username" required
                    value={{smtp.config.auth.user}}>
            </div>
            <div>
                <label for="password">Mot de passe</label>
                <br>
                <input type="text" name="password" id="password"
                    value={{smtp.config.auth.pass}}>
            </div>
        </section>

        <section class="formInput">
            <div>
                <select name="encryption" id="encryption">
                    <option value="true">SSL/TSL</option>
                    <option value="false">none</option>
                </select>
                <script>
                            document.getElementById('encryption').value = {{smtp.config.secure}}
                        </script>
            </div>
        </section>
        <button type="submit">Sauvegarder</button>
    </form>
</section>
