                    </div>
                </section>

                <span class="title">Information Hébergeur :</span>
                <section class="formInput">
                    <div style="width: 30%;">
                        <label for="domaine">Nom de domaine</label>
                        <br>
                        <input type="text" name="domaine" id="domaine" maxlength="25" value={{app.config.company.domaine}}>
                    </div>
                    <div style="width: 70%;">
                        <label for="logo">Logo  de l'hébergeur</label>
                        <br>
                        <input type="url" name="logo" id="logo" maxlength="25" value={{app.config.company.logo}}>
                    </div>
                </section>

                <section class="formInput">

                </section>


                <span class="title">Information Légales :</span>
