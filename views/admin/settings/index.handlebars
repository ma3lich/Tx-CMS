                        <input type="url" name="mentions" id="mentions" maxlength="25" value={{app.config.company.legale.mentions}}>
                    </div>
                </section>

                <section class="formInput">
                    <div>
                        <label for="privacy">CGV - CGU</label>
                        <br>
                        <input type="url" name="privacy" id="privacy" maxlength="25" value={{app.config.company.legale.privacy}}>
