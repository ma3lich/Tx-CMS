<section class="profile register">
    <div class="logoText">
        <img src="/images/logo-text.png" classe="" alt="">
        <h2>Gérer une offre Proxmox/Pterodactyl</h2>
    </div>
    <form action="/admin/categories/edit/:id" method="post">
        <input style="display:none" type="text" name="id" id="id"
            value={{categorie.id}}>
        <section class="formInput">
            <div>
                <label for="name">Nom de la catégorie</label>
                <br>
                <input type="text" name="name" id="name" required
                    value={{categorie.name}}>
            </div>
            <div>
                <label for="categorie">Serveur</label>
                <br>
                <select style="text-transform:capitalize;" name="server"
                    id="server" disabled>
                    {{#each server}}
                    <option value={{name}}>{{name}}</option>
                    {{/each}}
                </select>

                <script>
                            document.getElementById('server').value = `{{categorie.server}}`
                        </script>
            </div>
        </section>

        <section class="formInput">
            <div>
                <label for="auto">Livraison</label>
                <br>
                <select name="auto" id="auto">
                    <option value="1">Automatique</option>
                    <option value="0">Manuelle</option>
                </select>
                <script>
                            document.getElementById('auto').value = `{{categorie.auto}}`
                        </script>
            </div>
        </section>

        <button type="submit">Sauvegarder</button>
    </form>
</section>


<style>
        .hide{
            display: none;
        }

        .show{
            display: block;
        }
    </style>
<script>
   const categorieType = document.getElementById('planType').value
   const pterodactylOptions = document.querySelector('.pterodactylOptions')
   const proxmoxOptions = document.querySelector('.proxmoxOptions')

   console.log(categorieType)
    if (categorieType == 'pterodactyl'){
        pterodactylOptions.classList.add('show')
    }else{
        pterodactylOptions.classList.add('hide')
    }

    if (categorieType == 'proxmox'){
        proxmoxOptions.classList.add('show')

    }else{
        proxmoxOptions.classList.add('hide')
    }

    </script>